{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["cypress", "@testing-library/cypress"]
  },

  "baseUrl": "./",
  "paths": {
    "@/*": ["src/*"]
  },

  "include": ["vite.config.ts", "cypress/**/*"]
}
